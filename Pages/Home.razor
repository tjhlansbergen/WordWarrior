@page "/"
@inject WordWarrior.Services.DictionaryService DictionaryService
@inject WordWarrior.Services.BackgroundService BackgroundService

<PageTitle>Word Warrior</PageTitle>

<style>
    body {
        background-image: url('@backgroundImageUrl');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }
</style>

<div class="game-area">
    @if (isPaused)
    {
        <div class="pause-screen">
            <button class="play-button" @onclick="StartGame">
                <div class="play-triangle"></div>
            </button>
        </div>
    }
    else
    {
        <div class="game-container">
            @if (answerHistory.Any())
            {
                <div class="answer-history">
                    @foreach (var answer in answerHistory)
                    {
                        <div class="@(answer.IsCorrect ? "correct-answer-display" : "incorrect-answer-display")">
                            <span class="word-icon">@answer.WordRecord.Icon</span>
                            <span class="word-text @(answer.IsCorrect ? "" : "strikethrough")">@(answer.UserAttempt)</span>
                            <span class="validation-icon">@answer.Icon</span>
                        </div>
                    }
                </div>
            }

            @if (!hideNextQuestion)
            {
                <div class="word-container">
                    <span class="word-icon">@currentWordRecord?.Icon</span>
                    <input type="text" @bind="currentWord" @oninput="UpdateWord" @onkeypress="HandleKeyPress" class="word-input" @ref="inputElement" />
                </div>
            }
        </div>
    }
</div>

@code {
    private string currentWord = "";
    private string displayWord = "";
    private WordWarrior.Services.WordRecord? currentWordRecord;
    private WordWarrior.Services.WordRecord? completedWordRecord;
    private string userAttempt = "";
    private List<AnswerRecord> answerHistory = new();
    private int incorrectAttempts = 0;
    private const int MaxIncorrectAttempts = 3;
    private const int MaxHistoryItems = 5;
    private string backgroundImageUrl = "";
    private ElementReference inputElement;
    private bool isPaused = true; // Start in pause mode
    private int correctAnswerCount = 0;
    private const int CorrectAnswersBeforePause = 5;
    private bool hideNextQuestion = false;

    public record AnswerRecord(WordWarrior.Services.WordRecord WordRecord, string UserAttempt, bool IsCorrect, string Icon);

    protected override void OnInitialized()
    {
        currentWordRecord = DictionaryService.Next(1);
        backgroundImageUrl = BackgroundService.GetRandomBackground();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !isPaused)
        {
            await inputElement.FocusAsync();
        }
    }

    private async Task StartGame()
    {
        isPaused = false;
        correctAnswerCount = 0; // Reset counter when starting
        StateHasChanged();
        
        // Focus the input after the game container is rendered
        await Task.Delay(50); // Small delay to ensure rendering is complete
        await inputElement.FocusAsync();
    }

    private void GetNewBackground()
    {
        string newBackground;
        do
        {
            newBackground = BackgroundService.GetRandomBackground();
        } while (newBackground == backgroundImageUrl);
        
        backgroundImageUrl = newBackground;
        StateHasChanged();
    }

    private void UpdateWord(ChangeEventArgs e)
    {
        currentWord = e.Value?.ToString() ?? "";
        displayWord = currentWord;
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            ValidateWord();
        }
    }

    private void AddToHistory(AnswerRecord record)
    {
        answerHistory.Add(record);
        
        // Keep only the last 5 items (FIFO)
        if (answerHistory.Count > MaxHistoryItems)
        {
            answerHistory.RemoveAt(0);
        }
    }

    private void ValidateWord()
    {
        if (currentWordRecord != null)
        {
            userAttempt = currentWord.Trim(); // Store the user's attempt
            
            // Check if the user's attempt matches any of the correct answers
            var correctAnswers = currentWordRecord.Word.Split('/');
            bool isCorrect = correctAnswers.Any(answer => 
                string.Equals(userAttempt, answer.Trim(), StringComparison.OrdinalIgnoreCase));
            
            if (isCorrect)
            {
                // Add correct answer to history
                AddToHistory(new AnswerRecord(currentWordRecord, userAttempt, true, "✅"));
                
                // Increment correct answer counter
                correctAnswerCount++;
                
                // Reset incorrect attempts counter
                incorrectAttempts = 0;
                
                // Store the completed word before getting a new one
                completedWordRecord = currentWordRecord;
                
                // Clear input and get new word
                currentWord = "";
                currentWordRecord = DictionaryService.Next(1);
                
                // Check if we should pause after 5 correct answers
                if (correctAnswerCount >= CorrectAnswersBeforePause)
                {
                    hideNextQuestion = true; // Hide next question immediately
                    StateHasChanged(); // Update UI to hide the input
                    
                    // Wait 2 seconds to show the final correct answer before pausing
                    Task.Delay(2000).ContinueWith(_ =>
                    {
                        InvokeAsync(() =>
                        {
                            isPaused = true;
                            answerHistory.Clear(); // Clear history when pausing
                            GetNewBackground(); // Set new background when pausing
                            hideNextQuestion = false; // Reset for next session
                        });
                    });
                }
            }
            else
            {
                incorrectAttempts++;
                
                // Add incorrect answer to history
                AddToHistory(new AnswerRecord(currentWordRecord, userAttempt, false, "❌"));
                
                // Check if max attempts reached
                if (incorrectAttempts >= MaxIncorrectAttempts)
                {
                    // Add correct answer with arrow icon to history
                    AddToHistory(new AnswerRecord(currentWordRecord, currentWordRecord.Word, true, "⬅️"));
                    
                    // Reset error count and reload same word
                    incorrectAttempts = 0;
                    var wordToReload = currentWordRecord;
                    currentWordRecord = wordToReload;
                }
                
                // Clear input but keep same word for retry
                currentWord = "";
            }
        }
    }
}
